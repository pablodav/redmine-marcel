
<%= form_for(@vacation) do |f| %>

  <% if @vacation.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @vacation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :activity %><br />
    <%= f.collection_select :activity_id, @activities, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :from %><br />
    <%= f.text_field :from %>
    <%= javascript_tag do %>
      $(function(){
        d = new Date();
        $('#vacation_from').appendDtpicker({
          'current': d.getFullYear() + '-' + ('0' + (1 + d.getMonth())).slice(-2) + '-' + ('0' + d.getDate()).slice(-2) + ' 10:00'
        });
      });
    <% end %>
  </div>
  <div class="field">
    <%= f.label :to %><br />
    <%= f.text_field :to %>
    <%= javascript_tag do %>
      $(function(){
        d = new Date($('#vacation_from').val());
        $('#vacation_to').appendDtpicker({
          'current': d.getFullYear() + '-' + ('0' + (1 + d.getMonth())).slice(-2) + '-' + ('0' + d.getDate()).slice(-2) + ' 23:00'
        });
      });
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
<% content_for :header_tags do %>
    <%= javascript_include_tag 'jquery.simple-dtpicker.js', plugin: 'marcel' %>
    <%= stylesheet_link_tag 'jquery.simple-dtpicker.css', plugin: 'marcel' %>
<% end %>
